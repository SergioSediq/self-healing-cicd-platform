{
  "name": "Self-Healing CI/CD Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "postCreateCommand": "pip install -r src/agent/requirements.txt -r src/agent/requirements-test.txt && cd src/dashboard && npm install",
  "forwardPorts": [3000, 8080],
  "portsAttributes": {
    "3000": { "label": "Dashboard" },
    "8080": { "label": "Health" }
  }
}
